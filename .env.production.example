# Production Environment Variables for Digital Ocean
# Copy this file to .env and fill in your actual values

# Application Configuration
PORT=3000
NODE_ENV=production

# Database Configuration
# Replace with your MongoDB connection string from Digital Ocean Managed Database
# or your preferred MongoDB service
DATABASE_URL="mongodb+srv://username:password@your-cluster.mongodb.net/sellia?retryWrites=true&w=majority"

# OpenAI Configuration (for chatbot functionality)
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY="your-openai-api-key-here"
OPENAI_MODEL="gpt-4o-mini"

# CORS Configuration
# Add your Digital Ocean app URL here
CORS_ORIGIN="https://your-app-url.ondigitalocean.app"

# Security
# Generate a secure JWT secret: openssl rand -base64 32
JWT_SECRET="your-super-secure-jwt-secret-here"

# Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=900000

# Logging
LOG_LEVEL="info"